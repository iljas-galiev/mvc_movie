@model MvcMovie.Models.MovieSearchViewModel

@{
    ViewData["Title"] = "Movies";
}

<h1 class="text-center">Movies</h1>
<div class="container">

    <div class="row">
        <div class="col-sm-4">

            <form class="form-search" asp-controller="Movies" asp-action="Index" method="get">
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label for="MovieQuality">Качество</label>
                        <select class="form-control" asp-for="MovieQuality" asp-items="Model.Qualities">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label for="MovieYear">Год</label>
                        <select class="form-control" asp-for="MovieYear" asp-items="Model.Years">
                            <option value="">All</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container movies">
    <div class="row">
        @foreach (var item in Model.Movies)
        {
            <div class="col-sm-4 col-12 movie-container">
                <div class="movie">
                    <div class="movie-image-container">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <div class="movie-quality">
                                @Html.DisplayFor(modelItem => item.Quality)
                            </div>
                            <div class="movie-image">
                                <img src="/img/default.jpg" alt="">
                            </div>
                            <div class="movie-title">
                                @Html.DisplayFor(modelItem => item.Title)
                                (@Html.DisplayFor(modelItem => item.Year))
                            </div>
                        </a>
                    </div>
                    <div class="row movie-counters">
                        <div class="col-6">
                            <div class="movie-views">
                                <i class="fa fa-eye"></i>
                                1234
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="movie-downloads">
                                <i class="fa fa-download"></i>
                                567
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
